<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9e265"
    android:orientation="vertical"
    tools:context=".IniciarSesion">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_conversion_absoluteHeight="61dp"
        tools:layout_conversion_absoluteWidth="382dp"
        tools:layout_conversion_wrapHeight="161"
        tools:layout_conversion_wrapWidth="560">

        <EditText
            android:id="@+id/txt_correo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="15"
            android:hint="Correo"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:paddingTop="15dp"
            android:textColor="#033C0C"
            android:textColorHighlight="#033C0C"
            android:textColorHint="#009688"
            android:textColorLink="#033C0C"
            android:textSize="20sp"
            tools:layout_conversion_absoluteHeight="50dp"
            tools:layout_conversion_absoluteWidth="382dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="82dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        tools:layout_conversion_absoluteHeight="61dp"
        tools:layout_conversion_absoluteWidth="382dp"
        tools:layout_conversion_wrapHeight="161"
        tools:layout_conversion_wrapWidth="560">

        <EditText
            android:id="@+id/txt_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="15"
            android:hint="ContraseÃ±a"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingTop="15dp"
            android:textColor="#033C0C"
            android:textColorHighlight="#009688"
            android:textColorHint="#009688"
            android:textColorLink="#033C0C"
            android:textSize="20sp"
            tools:layout_conversion_absoluteHeight="50dp"
            tools:layout_conversion_absoluteWidth="382dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="82dp" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:background="#BEF781"
        android:onClick="IniciarSesion"
        android:text="  Iniciar sesion  "
        android:textColor="#012B02"
        android:textColorLink="#00BCD4"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        tools:ignore="OnClick"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="196dp"
        tools:layout_conversion_wrapHeight="126"
        tools:layout_conversion_wrapWidth="328" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:background="#BEF781"
        android:text="  Contacto  "
        android:textColor="#012B02"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="186dp"
        tools:layout_conversion_wrapHeight="126"
        tools:layout_conversion_wrapWidth="300" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="268dp"
        android:layout_height="243dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/start" />


</android.support.constraint.ConstraintLayout>